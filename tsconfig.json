{
    "compilerOptions": {
        "target": "ES5",
        "module": "ESNext",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "jsx": "react",
        "isolatedModules": true,
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "/src/*"
            ],
            "@com": [
                "/src/components/"
            ],
            "@com/*": [
                "/src/components/*"
            ],
            "@docs": [
                "/docs/"
            ],
            "@docs/*": [
                "/docs/*"
            ],
            "@scripts": [
                "/src/assets/scripts/"
            ],
            "@scripts/*": [
                "/src/assets/scripts/*"
            ],
            "@utils": [
                "/src/assets/scripts/utils/"
            ],
            "@utils/*": [
                "/src/assets/scripts/utils/*"
            ]
        },
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true,
        "noEmit": true
    },
    "include": [
        "./tsconfig.json",
        "./src",
        "./docs"
    ],
    "exclude": [
        "node_modules",
        "lib",
        "es",
        "dist",
        "typings",
        "**/__test__",
        "test",
        "docs",
        "tests"
    ]
}